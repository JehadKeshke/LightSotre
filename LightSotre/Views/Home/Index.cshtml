<style>
    .carousel-item img {
        height: 400px;
        object-fit: cover;
    }

    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5);
        padding: 20px;
        border-radius: 10px;
    }

        .carousel-caption h5,
        .carousel-caption p {
            color: #fff;
        }
</style>


<div class="container mt-5">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/FrontEnd/img/logo_make_11_06_2023_353.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Welcome to our Light Store</h5>
                    <p>Discover a wide range of stylish and energy-efficient lighting solutions.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/FrontEnd/img/pexels-jonathan-meyer-752484 (1).jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Illuminate Your Space</h5>
                    <p>Explore our collection of modern and elegant lighting fixtures.</p>
                </div>
            </div><div class="carousel-item">
                <img class="d-block w-100" src="~/FrontEnd/img/pexels-pixabay-219692.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Illuminate Your Space</h5>
                    <p>Explore our collection of modern and elegant lighting fixtures.</p>
                </div>
            </div><div class="carousel-item">
                <img class="d-block w-100" src="~/FrontEnd/img/images.jpeg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Illuminate Your Space</h5>
                    <p>Explore our collection of modern and elegant lighting fixtures.</p>
                </div>
            </div>
            <!-- Add more carousel items as needed -->
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div class="container-xxl py-5">
    <div class="container">
        <div class="section-title text-center">
            <h1 class="display-5 mb-5" style="color:sienna">Ürünlerimiz</h1>
        </div>
        <div class="row mt-n2 wow fadeInUp" data-wow-delay="0.3s">
            <div class="col-12 text-center">
                <ul class="list-inline mb-5" id="portfolio-flters">
                    <li class="mx-2 active" data-filter="*">All</li>
                </ul>
            </div>
        </div>
        <div class="row g-4 portfolio-container">
            @foreach (var x in Model)
            {
                <div class="col-lg-4 col-md-6 portfolio-item @x.Kategore.KategoreIsim wow fadeInUp" data-wow-delay="0.1s">
                    <div class="rounded overflow-hidden">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="@x.urunImage" alt="">
                            <div class="portfolio-overlay">
                                <a class="btn btn-square btn-outline-light mx-1" href="@x.urunImage" data-lightbox="portfolio"><i class="fa fa-eye"></i></a>
                                <a class="btn btn-square btn-outline-light mx-1" href=""><i class="fas fa-cart-plus"></i></a>
                            </div>
                        </div>
                        <div class="border border-5 border-light border-top-0 p-4">
                            <r>Urun ismi :</r><r class="text-primary fw-medium mb-2"> @x.UrunIsim</r>
                            <br />
                            <r>Urun Fiyatı :</r><r class="text-primary fw-medium mb-2"> @x.urunFiyat</r>
                            <br />
                            <r>Urun Özellikleri :</r><r class="text-primary fw-medium mb-2">@x.urunOzellikler</r>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

